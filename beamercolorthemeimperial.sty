%
% Colour scheme following the Imperial College London
% colour palette. For details:
% http://www.imperial.ac.uk/brand-style-guide/visual-identity/brand-colours/
%
\mode<presentation>

\definecolor{IclNavy}{RGB}{0,33,71}
\definecolor{IclImperialBlue}{RGB}{0,62,116}
\definecolor{IclLightGrey}{RGB}{235,238,238}
\definecolor{IclDarkGreen}{RGB}{2,137,59}
\definecolor{IclTangerine}{RGB}{236,115,0}
\definecolor{IclBrick}{RGB}{165,25,0}

\setbeamercolor{structure}{fg=IclNavy}

\setbeamercolor*{palette primary}{fg=white,bg=IclBrick}
\setbeamercolor*{palette secondary}{fg=white,bg=IclImperialBlue}
\setbeamercolor*{palette tertiary}{fg=white,bg=IclTangerine}
\setbeamercolor*{palette quaternary}{fg=white,bg=IclNavy}

%\setbeamercolor*{separation line}{fg=IclTangerine}
%\setbeamercolor*{fine separation line}{fg=IclTangerine}

\setbeamercolor{normal text}{fg=IclImperialBlue}
\setbeamercolor{alerted text}{fg=IclBrick}
\setbeamercolor{example text}{fg=IclDarkGreen}

\setbeamercolor{block title}{fg=white,bg=IclImperialBlue}
\setbeamercolor{block body}{fg=IclImperialBlue,bg=IclLightGrey}

\setbeamercolor{block title alerted}{fg=white,bg=IclBrick}
\setbeamercolor{block body alerted}{fg=IclBrick,bg=IclLightGrey}

\setbeamercolor{block title example}{fg=white,bg=IclDarkGreen}
\setbeamercolor{block body example}{fg=IclDarkGreen,bg=IclLightGrey}

\setbeamercolor{author in head/foot}{fg=white,bg=IclNavy}
\setbeamercolor{institute in head/foot}{fg=white,bg=IclNavy}

\setbeamercolor{title}{fg=IclBrick,bg=white}
\setbeamerfont{title}{series=\bfseries,size={\fontsize{14}{18}}}


\setbeamercolor{frametitle}{fg=IclBrick,bg=white}
\setbeamerfont{date}{size={\fontsize{8}{12}}}
